<% layout('layouts/boilerplate') %>
<div class="row">
    <h1 class="text-center">New Article</h1>
    <div class="col-6 offset-3">
        <form action="/articles" method="POST" novalidate class="validated-form" enctype="multipart/form-data">
            <div class="mb-3">
                <label class="form-label" for="title">Title</label>
                <input class="form-control" type="text" name="article[title]" id="title" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="game">Game</label>
                <input class="form-control" type="text" name="article[game]" id="game" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="console">Console</label>
                <input class="form-control" type="text" name="article[console]" id="console" required>
            </div>
            <div class="mb-3">
                <label class="form-label" for="release">Release</label>
                <input class="form-control" type="text" name="article[release]" id="release" required>
            </div>
            <div class="mb-3">
                <input type="file" name="image" id="" multiple>
            </div>
<!--             <div class="mb-3">
                <label class="form-label" for="image">Image</label>
                <input class="form-control" type="text" name="article[image]" id="image" required>
            </div> -->
            <div class="mb-3">
                <label class="form-label" for="blog">Blog</label>
                <textarea class="form-control" type="text" name="article[blog]" id="mytextarea"></textarea>
            </div>
            <!-- Movies Section -->
            <div class="mb-3">
                <h3>Movies</h3>
                <% for (let i = 1; i <= 5; i++) { %>
                <div class="mb-3">
                    <label class="form-label" for="movie<%= i %>">Movie <%= i %>:</label>
                    <input class="form-control" type="text" id="movie<%= i %>" name="movieNames[]" required>
                    <label class="form-label" for="movieImage<%= i %>">Image:</label>
                    <input class="form-control" type="file" id="movieImage<%= i %>" name="movies">
                </div>
                <% } %>
            </div>

            <!-- Music Section -->
            <div class="mb-3">
                <h3>Music</h3>
                <% for (let i = 1; i <= 5; i++) { %>
                <div class="mb-3">
                    <label class="form-label" for="music<%= i %>">Music <%= i %>:</label>
                    <input class="form-control" type="text" id="music<%= i %>" name="musicNames[]" required>
                    <label class="form-label" for="musicImage<%= i %>">Image:</label>
                    <input class="form-control" type="file" id="musicImage<%= i %>" name="music">
                </div>
                <% } %>
            </div>

            <!-- NHL Section -->
            <div class="mb-3">
                <h3>NHL</h3>
                <% for (let i = 1; i <= 5; i++) { %>
                <div class="mb-3">
                    <label class="form-label" for="nhl<%= i %>">NHL <%= i %>:</label>
                    <input class="form-control" type="text" id="nhl<%= i %>" name="nhlNames[]" required>
                    <label class="form-label" for="nhlImage<%= i %>">Image:</label>
                    <input class="form-control" type="file" id="nhlImage<%= i %>" name="nhl">
                </div>
                <% } %>
            </div>

            <!-- NBA Section -->
            <div class="mb-3">
                <h3>NBA</h3>
                <% for (let i = 1; i <= 5; i++) { %>
                <div class="mb-3">
                    <label class="form-label" for="nba<%= i %>">NBA <%= i %>:</label>
                    <input class="form-control" type="text" id="nba<%= i %>" name="nbaNames[]" required>
                    <label class="form-label" for="nbaImage<%= i %>">Image:</label>
                    <input class="form-control" type="file" id="nbaImage<%= i %>" name="nba">
                </div>
                <% } %>
            </div>

            <!-- MLB Section -->
            <div class="mb-3">
                <h3>MLB</h3>
                <% for (let i = 1; i <= 5; i++) { %>
                <div class="mb-3">
                    <label class="form-label" for="mlb<%= i %>">MLB <%= i %>:</label>
                    <input class="form-control" type="text" id="mlb<%= i %>" name="mlbNames[]" required>
                    <label class="form-label" for="mlbImage<%= i %>">Image:</label>
                    <input class="form-control" type="file" id="mlbImage<%= i %>" name="mlb">
                </div>
                <% } %>
            </div>

            <!-- NFL Section -->
            <div class="mb-3">
                <h3>NFL</h3>
                <% for (let i = 1; i <= 5; i++) { %>
                <div class="mb-3">
                    <label class="form-label" for="nfl<%= i %>">NFL <%= i %>:</label>
                    <input class="form-control" type="text" id="nfl<%= i %>" name="nflNames[]" required>
                    <label class="form-label" for="nflImage<%= i %>">Image:</label>
                    <input class="form-control" type="file" id="nflImage<%= i %>" name="nfl">
                </div>
                <% } %>
            </div>
            <div class="mb-3">
                <button class="btn btn-success">Add Article</button>
            </div>
        </form>
        <a class="btn btn-warning" href="/articles">Back to Articles</a>
    </div>
</div>